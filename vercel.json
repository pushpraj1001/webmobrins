{
  "functions": {
    "api/**/*.php": {
      "runtime": "vercel-php@0.7.4"
    }
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api/index.php"
    },
    { "src": "/css/(.*)", "dest": "/assets/css/$1" },
    { "src": "/js/(.*)", "dest": "/assets/js/$1" },
    { "src": "/images/(.*)", "dest": "/assets/images/$1" }
  ]
}
